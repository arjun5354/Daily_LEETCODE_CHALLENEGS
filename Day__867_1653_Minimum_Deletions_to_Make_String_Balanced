class Solution {
public:
    int minimumDeletions(string s) {
        int b_count = 0;
        int result = 0;
        for (char& c : s) {
            if (c == 'b') {
                b_count++;
            } else {
                result = min(result + 1, b_count);
            }
        }
        return result;
    }
};
